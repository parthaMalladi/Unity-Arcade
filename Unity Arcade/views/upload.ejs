<%- include("partials/header.ejs") %>

<form action="/upload" method="POST" autocomplete="off">
  <div class="container">
      <div class="form-group my-3 fs-5">
          <label for="title">Game Title</label>
          <input type="text" id="title" name="title" class="form-control" required>
      </div>

      <div class="form-group my-3 fs-5">
        <label for="link">URL Link</label>
        <input type="url" id="link" name="link" class="form-control" required>
      </div>

      <div class="form-group my-3 fs-5">
        <label for="desc">Description Of The Game</label>
        <input type="text" id="desc" name="desc" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-warning fs-5">Upload Game</button>
  </div>
</form>

